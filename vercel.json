{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "env": {
          "VITE_GEMINI_API_KEY": "@gemini_api_key"
        }
      }
    },
    {
      "src": "api/*.js",
      "use": "@vercel/node",
      "config": {
        "env": {
          "GEMINI_API_KEY": "@gemini_api_key"
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}